<Window x:Class="PruefungProj_LifeOrganaiser.View.TodoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PruefungProj_LifeOrganaiser.View"
        mc:Ignorable="d"
        Title="TodoWindow" Height="450" Width="800">

    <Border Padding="15" CornerRadius="10" Background="White">
        <StackPanel>

            <TextBlock Text="My Todo List"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBox Width="230"
                         Height="32"
                         Padding="8"
                         Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"
                         ToolTip="Enter new task"/>

                <Button Content="➕"
                        Width="40"
                        Height="32"
                        Margin="8,0,0,0"
                        Command="{Binding AddTaskCommand}"/>
            </StackPanel>

            <ListBox ItemsSource="{Binding TaskItems}"
                     BorderThickness="0">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,2"
                                Padding="6"
                                CornerRadius="6"
                                Background="#EEF1F7">
                            <StackPanel Orientation="Horizontal">

                                <CheckBox IsChecked="{Binding IsDone}"
                                          VerticalAlignment="Center"/>

                                <TextBlock Text="{Binding Title}"
                                           Margin="6,0"
                                           VerticalAlignment="Center"
                                           Width="180"/>

                                <Button Content="🗑"
                                        Width="30"
                                        Command="{Binding DataContext.DeleteTaskCommand,
                                                  RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </StackPanel>
    </Border>
</Window>
