<Window x:Class="PruefungProj_LifeOrganaiser.View.TripWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PruefungProj_LifeOrganaiser.View"
        mc:Ignorable="d"
        Title="TripWindow" Height="450" Width="800">


    <DockPanel Margin="10">

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Add Trip" Width="80" Margin="5" Command="{Binding AddTripCommand}"/>
            <Button Content="Delete Trip" Width="80" Margin="5" Command="{Binding DeleteTripCommand}" 
                    CommandParameter="{Binding SelectedTrip}"/>
            <Button Content="Copy Trip" Width="80" Margin="5" Command="{Binding CopyTripCommand}"
                    CommandParameter="{Binding SelectedTrip}"/>
        </StackPanel>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding TripsCount, StringFormat=Total Trips: {0}}"/>
        </StatusBar>

        <TabControl>
            <TabItem Header="ToVisit">
                <ListBox ItemsSource="{Binding ToVisitTrips}" SelectedItem="{Binding SelectedTrip, Mode=TwoWay}" BorderThickness="0">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="5" Width="180">
                                <StackPanel>
                                    <Image Source="{Binding ImagePath}" Height="120" Stretch="UniformToFill"/>
                                    <TextBlock Text="{Binding City}" FontWeight="Bold" TextAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" TextAlignment="Center"/>
                                    <CheckBox Content="Visited?" IsChecked="{Binding IsVisited, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <TextBlock Text="Rating:" Margin="0,0,5,0"/>
                                        <Slider Minimum="0" Maximum="10" Value="{Binding Rating}" Width="80"/>
                                        <TextBlock Text="{Binding Rating}" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <Button Content="Delete" 
                                            Command="{Binding DataContext.DeleteTripCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>

            <TabItem Header="Visited">
                <ListBox ItemsSource="{Binding VisitedTrips}" SelectedItem="{Binding SelectedTrip, Mode=TwoWay}" BorderThickness="0">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="5" Width="180">
                                <StackPanel>
                                    <Image Source="{Binding ImagePath}" Height="120" Stretch="UniformToFill"/>
                                    <TextBlock Text="{Binding City}" FontWeight="Bold" TextAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" TextAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <TextBlock Text="Rating:" Margin="0,0,5,0"/>
                                        <Slider Minimum="0" Maximum="10"   TickFrequency="1" Value="{Binding Rating}" Width="80"/>
                                        <TextBlock Text="{Binding Rating}" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <Button Content="Delete" 
                                            Command="{Binding DataContext.DeleteTripCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>

    </DockPanel>
</Window>

